{
  "configurations": [
  
    {
      "name": "RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rspec",
      "args": [
        "-I",
        "${workspaceRoot}"
      ]
    },
    {
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "remoteHost": "127.0.0.1",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}"
    },
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server"
      ]
    },
  {
    "name": "RSpec - active spec file only",
    "type": "Ruby",
    "request": "launch",
    "program": "${workspaceRoot}/bin/rspec",
    "args": [
      "-I",
      "${workspaceRoot}",
      "${file}"
    ]
  },
    {
        "name": "Remote Docker - Listen for rdebug-ide",
        "type": "Ruby",
        "request": "attach",
        "cwd": "${workspaceRoot}/backend",
        "remoteHost": "0.0.0.0",
        "remotePort": "1234",
        "remoteWorkspaceRoot": "/app"
    }
  ]
}